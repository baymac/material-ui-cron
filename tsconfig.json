{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/stories/*"]
}
